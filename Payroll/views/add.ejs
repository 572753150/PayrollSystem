<script>
    $(function () {

        var input_id = $('#input_id'),
            select_rank = $('#select_rank'),
            select_department = $('#select_department'),
            input_salary = $('#input_salary'),
            input_first_name = $('#input_first_name'),
            input_last_name = $('#input_last_name'),
            btn_hire = $('#btn_hire'),
            select_sex = $('#select_sex'),
            input_time = $('#input_time'),
            input_birth = $('#input_birth');
        btn_hire.click(function (event) {
            event.preventDefault();
            $.ajax({
                url: '/payroll/hire',
                data: {
                    "eid": input_id.val(),
                    "rank": select_rank.val(),
                    'department': select_department.val(),
                    'salary': input_salary.val(),
                    'first_name': input_first_name.val(),
                    'sex': select_sex.val(),
                    'birth': input_birth.val(),
                    'date': input_time.val(),
                    'last_name': input_last_name.val()

                },
                method: 'POST',
                success: (employee, status, xhr) => {
                    $('#p_eid').html(employee.eid);
                    $('#p_date').html(employee.date);
                    $('#p_rank').html(employee.rank);
                    $('#p_department').html(employee.department);
                    $('#p_manager').html(employee.manager);
                    $('#p_password').html(employee.password);
                    $('#ui_modal').modal();

                },
                error: (err) => {
                    alert(err);
                },
            });
        });
    });
    $('#input_time').pickdate();
    $('#input_birth').pickdate();
</script>
