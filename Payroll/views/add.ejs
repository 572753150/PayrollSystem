<div class="wrapper">
    <div class="sidebar" data-color="blue" data-image="/images/sidebar-2.jpg">

        <!--   you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple" -->


        <div class="sidebar-wrapper">
            <div class="logo">
                <a class="simple-text">
                    Payroll
                </a>
            </div>

            <ul class="nav">

                <li>
                    <a href="/payroll/user">

                        <p>User Profile</p>
                    </a>
                </li>

                <li>
                    <a href="/payroll/manage">

                        <p>Manage</p>
                    </a>
                </li>
                <li class="active">
                    <a href="/payroll/hire">

                        <p>Hire</p>
                    </a>
                </li>


                <li>
                    <a href="/payroll/paystub">

                        <p>Pay stub</p>
                    </a>
                </li>

                <li>
                    <a href="/payroll/api/logout">

                        <p>Log out</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-panel">


        <div class="content">

            <div id="div_content" class="container col-md-9 ">
                <div class="">

                    <form action='/payroll/hire' method="post">

                        <div class="form-group">
                            <label for="input_id">Employee ID</label>
                            <input type="text" name="eid" class="form-control" id="input_id" placeholder="Employee ID">
                        </div>
                        <div class="form-group">
                            <label for="input_id">First Name</label>
                            <input type="text" name="eid" class="form-control" id="input_first_name"
                                   placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <label for="input_id">Last Name</label>
                            <input type="text" name="eid" class="form-control" id="input_last_name"
                                   placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <label for="select_sex">Sex</label>
                            <select id="select_sex" name="sex" class="form-control">
                                <option>Female</option>
                                <option>Male</option>
                            </select>
                        </div>
                        <div class="form-group" style="margin-top:2em">
                            <label for="input_birth">Date of birth</label>
                            <input  type="text" class="form-control" id="input_birth" placeholder="Date of birth">
                        </div>
                        <div class="form-group" style="height: 1px;background-color: #1b6d85"></div>
                        <div class="form-group" style="margin-top:2em">
                            <label for="input_time">Start Date</label>
                            <input type="date" class="form-control" id="input_time" placeholder="Date">
                        </div>
                        <div class="form-group">
                            <label for="select_rank">Rank</label>
                            <select id="select_rank" name="rank" class="form-control">
                                <option>Manager</option>
                                <option>Project leader</option>
                                <option>Senior software developer</option>
                                <option>Programmer</option>
                                <option>Administrator</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="select_department">Department</label>
                            <select id="select_department" name="department" class="form-control">
                                <option>Services</option>
                                <option>Marketing</option>
                                <option>Financial</option>
                                <option>Inventory</option>
                                <option>Insurance</option>
                                <option>Licenses</option>
                                <option>Customer Service</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Salary</label>
                            <form class="form-inline">
                                <label class="sr-only" for="input_salary">Amount (in dollars)</label>
                                <div class="input-group">
                                    <div class="input-group-addon">$</div>
                                    <input type="text" class="form-control" id="input_salary" placeholder="Amount">
                                </div>
                            </form>
                        </div>

                        <button type="button" id="btn_hire" class="btn btn-default">Hire</button>
                    </form>
                </div>
            </div>

        </div>
    </div>


    <footer class="footer">

    </footer>

</div>
</div>
<div aria-hidden="true" class="modal fade" id="ui_modal" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="margin: 1em;padding: 1em">
            <div class="modal-heading">
                <a class="modal-close" data-dismiss="modal"></a>
                <h2 class="modal-title">Success</h2>
            </div>
            <div class="modal-inner">
                <div class="content" id='div_content'>
                    <div >
                        <h5><sp class="category">Employee ID:</sp>
                            <sp id="p_eid"></sp></h5>
                    </div>
                    <div >
                        <h5><sp class="category">Password:</sp>
                            <sp id="p_password"></sp></h5>
                    </div>
                    <div >
                        <h5><sp class="category">Date: </sp>
                            <sp id="p_date"></sp></h5>
                    </div>

                    <div >
                        <h5><sp class="category">Rank: </sp>
                            <sp id="p_rank"></sp></h5>
                    </div>

                    <div >
                        <h5><sp class="category">Department: </sp>
                            <sp id="p_department"></sp></h5>
                    </div>

                    <div >
                        <h5><sp class="category">Manager: </sp>
                            <sp id="p_manager"></sp></h5>
                    </div>


                </div>

            </div>
            <div class="modal-footer">
                <p class="text-right">
                    <button class="btn btn-flat btn-brand waves-attach" data-dismiss="modal" type="button">Close
                    </button>
                    <button class="btn btn-flat btn-brand waves-attach" data-dismiss="modal" type="button">OK
                    </button>
                </p>
            </div>
        </div>
    </div>
</div>

